class Util {
    static Boolean isUnderAge(Customer c) {
        DateTime dob = c.dob;
        DateTime now = DateTime.now();

        return now.year - dob.year >= 18;
    }

    static Boolean isValidCard(CardPayMethod c) {
        DateTime valid = c.validTill;
        DateTime now = DateTime.now();

        return valid.isAfter(now);
    }
}